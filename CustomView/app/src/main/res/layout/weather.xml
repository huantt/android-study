<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light"
        android:padding="30dp">

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Diego"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_city1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city"
            android:layout_marginTop="10dp"
            android:text="Current Location"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city1"
            android:layout_marginTop="10dp"
            android:text="77 F"
            android:textColor="@android:color/white"
            android:textSize="20pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/num"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_city1"
            android:text="15:20 PM"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_orange_light"
        android:padding="30dp">

        <TextView
            android:id="@+id/txt_city2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Diego"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_city21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city2"
            android:layout_marginTop="10dp"
            android:text="Current Location"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city21"
            android:layout_marginTop="10dp"
            android:text="77 F"
            android:textColor="@android:color/white"
            android:textSize="20pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/num2"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_city21"
            android:text="15:20 PM"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_green_light"
        android:padding="30dp">

        <TextView
            android:id="@+id/txt_city3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Diego"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_city31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city3"
            android:layout_marginTop="10dp"
            android:text="Current Location"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city31"
            android:layout_marginTop="10dp"
            android:text="77 F"
            android:textColor="@android:color/white"
            android:textSize="20pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/num3"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_city31"
            android:text="15:20 PM"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

    </RelativeLayout>


</LinearLayout>